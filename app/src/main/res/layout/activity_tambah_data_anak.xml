<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.pedulistunting.TambahDataAnak">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#082757"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/brand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/bold"
            android:text="TAMBAH DATA ANAK"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/formReg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Data Anak Sesuai KK" />

            <EditText
                android:id="@+id/etRegnama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="NAMA LENGKAP"
                android:inputType="text"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etRegNik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="NIK"
                android:inputType="number|numberSigned"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etRegTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="TANGGAL LAHIR"
                android:inputType="none"
                android:padding="5dp" />


            <EditText
                android:id="@+id/etRegNikIbu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="NIK IBU"
                android:inputType="number|numberSigned"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etRegNamaIbu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="NAMA IBU"
                android:inputType="text"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/spRegJenis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Data Domisili" />

            <Spinner
                android:id="@+id/spRegProv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <Spinner
                android:id="@+id/spRegKab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <Spinner
                android:id="@+id/spRegKec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <Spinner
                android:id="@+id/spRegDes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <Spinner
                android:id="@+id/spRegDus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spborder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etRegRt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="RT"
                    android:inputType="number"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="    "
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/etRegRw"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="RW"
                    android:inputType="number"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Data Antropometri" />

            <EditText
                android:id="@+id/etBB"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="BERAT BADAN (KG)"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etTB"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="TINGGI / PANJANG BADAN (CM)"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etLK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="LINGKAR KEPALA (CM)"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="TAMBAH DATA ANAK"
                android:textColor="@color/white"
                app:backgroundTint="@color/icon_background"
                app:icon="@drawable/baseline_send_24"
                app:iconGravity="textEnd"
                app:iconTint="@color/white" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/loadingRegData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DA000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <ProgressBar
            android:id="@+id/pbLoadRegData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="#FED100" />

        <TextView
            android:id="@+id/tvLoadRegData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengirim data ke server..."
            android:textColor="#FED100" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>